	"UML_Sequence" : {
		"prefix": "uml_sequence",
		"body":[
			"```plantuml",
			"@startuml",
			"skinparam monochrome true",
			"autonumber", 
			"title Sequence",
			"",
			"actor Foo",
			"activate Foo",
			"activate Bar",
			"Foo-->Bar:barMethod",
			"activate Baz",
			"Bar-->Baz:bazMethod",
			"Baz-->Bar:response",
			"deactivate Baz",
			"Bar-->Foo:response",
			"deactivate Bar",
			"@enduml",
			"```",
			"",
			"[help](http://yohshiy.blog.fc2.com/blog-entry-153.html)"
		],
	    "description": "UML Sequence"
	},

	"UML Activity": {
		"prefix": "uml_activity",
		"body": [
			"```plantuml",
			"@startuml",
			"skinparam monochrome true",
			"title Activity",
			"",
			"(*) --> \"Foo\"",
			"\"Foo\" -> \"Bar\"",
			"if \"Bar?\" then",
			"->[ok] \"Baz\"",
			"else",
			" ->[no] \"Qux\"",
			"endif",
			"\"Baz\" --> ==gate==",
			"\"Qux\" --> ==gate==",
			"==gate== --> (*)",
			"@enduml",
			"```"
		],
		"description": "UML Activity"
	},

	"UML State":{
		"prefix": "uml_state",
		"body" :[
			"```plantuml",
			"@startuml",
			"skinparam monochrome true",
			"title State",
			"",
			"[*] --> Foo",
			"Foo -right-> Bar : disable",
			"Bar -left-> Foo  :enable",
			"Foo --> Baz  : close",
			"Bar --> Baz  : close",
			"Baz --> [*]",
			"@enduml",
			"```"
		],
		"description": "UML state"
	},

